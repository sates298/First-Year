<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>

<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="500">
    <HBox alignment="CENTER" spacing="10" prefHeight="40">
        <TextField fx:id="n" text="width" prefWidth="100"/>
        <TextField fx:id="m" text="height" prefWidth="100"/>
        <TextField fx:id="k" text="speed" prefWidth="100"/>
        <TextField fx:id="p" text="probability" prefWidth="100"/>
        <Button text="start" onAction="#startApplication" prefWidth="100"/>
    </HBox>

    <HBox>
    <GridPane fx:id="pane"/>
</HBox>
</VBox>
